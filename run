#!/bin/sh

kramdown --parse-block-html --template template.html.erb $1 | sed -e 's/<h2/<div class="item"><h2/g' | sed -e 's/<pre/<pre class="prettyprint lang-hs"/g' | sed -e 's/<\/pre>/<\/pre><\/div>/g' > out.html
wkhtmltopdf-amd64 --use-xserver -B 0mm -L 0mm -R 0mm -T 0mm --debug-javascript --enable-javascript --javascript-delay 3000 --page-width 3508px --page-height 2480px out.html out.pdf
